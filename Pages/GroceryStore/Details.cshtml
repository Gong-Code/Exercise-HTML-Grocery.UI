@page
@model Grocery.UI.Pages.GroceryStore.DetailModel
@{
}

<div id="top-container" class="text-center">
    <h2 class="font-weight-bold text-success">
        @Model.GroceryItem.Name
    </h2>
    <img id="big-food-icon" style="height:15rem" src="@Model.GroceryItem.ImageSrc">
    <p id="display-price" class="font-weight-bold text-left">$@String.Format("{0:0.00} / lb", @Model.GroceryItem.Price)</p>
</div>

<hr />

<div id="description-container">
    <p class="font-weight-bold text-info">@Model.GroceryItem.Description </p>
</div>

<hr />


<div id="pricing-container" class="d-flex font-weight-bold">
    <span id="unit-price" class="d-none">@Model.GroceryItem.Price</span>
    <div class="col text-left">
        <form method="post">
            <label for="quantity">Quantity:</label>
            <input type="number" asp-for="Quantity" value="1">
        </form>
    </div>

    <div class="col text-right">
        Total: $<span id="total-price">@(Model.GroceryItem.Price )</span>
    </div>
    <br />
    <form asp-page-handler="Add">
        <input type="hidden" asp-for="Id" value="@Model.GroceryItem.GroceryID" />
        <div id="buy-button" class="text-right">
            <a asp-page="/AddToCart" asp-route-id="@Model.GroceryItem.GroceryID" class="btn btn-primary">Add to cart</a>

        </div>
    </form>


</div>

<hr />


<div id="back-button" class="text-center">
    <a asp-page="/Index" class="btn btn-success btn-lg">
        Back To home
    </a>
</div>




